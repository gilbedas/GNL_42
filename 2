#include "libft/libft.h"
#include "get_next_line.h"

int		main(int argc, char **argv)
{
	int		fd;
	char	*line;
	int		i;
	int		j;

	fd = open(argv[1], O_RDONLY);
	i = argc;
	while ((j = get_next_line(fd, &line)) != 0)
	{
		ft_putstr("[");
		ft_putnbr(j);
		ft_putstr("]");
		ft_putendl(line);
	}
	ft_putstr("[");
	ft_putnbr(j);
	ft_putstr("]");
	ft_putendl(line);
	return (0);
}
